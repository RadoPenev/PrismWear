@model PrismWear.Web.ViewModels.Cart.CartViewModel

@if (Model == null || !Model.Items.Any())
{
    <div class="alert alert-warning text-center">
        Твоята количка е празна. <a href="/Products" class="btn btn-primary">Пазарувай</a>
    </div>
}
else
{
    <ul class="list-group mb-3">
        @foreach (var item in Model.Items)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <img src="@item.ImageUrl" alt="@item.Name" width="50" height="50" class="rounded" />
                    <h6 class="my-0">@item.Name</h6>
                    <small class="text-muted">Size: @item.Size | Qty: @item.Quantity</small>
                </div>
                <span class="text-muted">@((item.Price * item.Quantity).ToString("0.00")) лв.</span>
            </li>
        }
    </ul>
}
