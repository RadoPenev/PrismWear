@using PrismWear.Common
@using PrismWear.Web.ViewModels.Products
@model SingleProductViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@Model.Name - Product Details</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .product-page-container {
            display: flex;
            flex-direction: row;
            max-width: 1200px;
            margin: 40px auto;
            padding: 0 20px;
        }

        .product-image-section {
            flex: 1;
            text-align: center;
            padding: 20px;
        }

            .product-image-section img {
                max-width: 100%;
                border-radius: 8px;
            }

        .product-details-section {
            flex: 1;
            padding: 20px;
        }

        .product-title {
            font-size: 2em;
            margin-bottom: 10px;
            font-weight: bold;
        }

        .product-category {
            font-size: 0.9em;
            color: #666;
            margin-bottom: 20px;
        }

        .product-price {
            font-size: 1.5em;
            color: #e60023;
            margin-bottom: 10px;
        }

        .product-description {
            margin-bottom: 20px;
            line-height: 1.5;
        }

        .product-sizes label {
            font-weight: bold;
        }

        .size-options {
            margin: 10px 0 20px;
        }

        .size-option {
            display: inline-block;
            margin-right: 10px;
            border: 1px solid #ccc;
            padding: 6px 12px;
            border-radius: 4px;
            cursor: pointer;
        }

        .add-to-cart {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .quantity-input {
            width: 60px;
            text-align: center;
            padding: 5px;
        }

        .add-to-cart button {
            background-color: #000;
            color: #fff;
            border: none;
            padding: 10px 20px;
            text-transform: uppercase;
            cursor: pointer;
            border-radius: 4px;
        }

            .add-to-cart button:hover {
                background-color: #444;
            }
    </style>
</head>
<body>
    <div class="product-page-container">
        <div class="product-image-section">
            <img src="@Model.ImageUrl" alt="@Model.Name" />
        </div>
        <div class="product-details-section">
            <div class="product-title">@Model.Name</div>
            <div class="product-category">@Model.CategoryName</div>
            <div class="product-price">@Model.Price.ToString("F2") лв</div>

            <div class="product-description">
                @Model.Description
            </div>

            <div class="product-sizes">
                <label>Available Size(s):</label>
                <div class="size-options">
                    @foreach (var detail in Model.Details)
                    {
                        var textColor = detail.Quantity == 0 ? "#ccc" : "#000";
                        <span class="size-option" style="color:@textColor;">@detail.Size</span>
                    }
                </div>
            </div>

            <form method="post" action="/Cart/Add">
                <input type="hidden" name="productId" value="@Model.Id" />
                <div class="add-to-cart">
                    <input class="quantity-input" type="number" name="quantity" value="1" min="1" max="99" />
                    <button type="submit">Добави в кошницата</button>
                </div>
            </form>

            <span class="single-meta">
                <a asp-controller="Products" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Edit</a>
            </span>
            <form asp-controller="Products" asp-action="Delete" asp-route-id="@Model.Id" method="post"
                  onsubmit="return confirm('Are you sure you want to delete this item?');">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</body>
</html>
