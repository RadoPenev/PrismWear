@using PrismWear.Web.ViewModels.Products
@model EditProductInputModel
@{
    ViewData["Title"] = "Add New Product";
    var categoriesItems = Model.CategoriesItems.Select(x => new SelectListItem(x.Value, x.Key));
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Edit Product</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }

        .edit-container {
            max-width: 600px;
            margin: 40px auto;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.15);
            padding: 30px;
        }

            .edit-container h1 {
                text-align: center;
                margin-top: 0;
                margin-bottom: 20px;
                font-size: 1.8em;
            }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                display: block;
                font-weight: bold;
                margin-bottom: 5px;
            }

            .form-group input[type="text"],
            .form-group input[type="number"],
            .form-group textarea,
            .form-group select {
                width: 100%;
                padding: 8px 10px;
                border: 1px solid #ccc;
                border-radius: 4px;
                font-size: 1em;
            }

            .form-group textarea {
                resize: vertical;
            }

        .submit-btn {
            display: block;
            width: 100%;
            padding: 12px 16px;
            background-color: #333;
            color: #ffffff;
            text-transform: uppercase;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            .submit-btn:hover {
                background-color: #444;
            }

        .text-danger {
            color: red;
            font-size: 0.9em;
        }
    </style>
</head>
<body>
    <div class="edit-container">
        <h1>Edit Product</h1>

        <form asp-action="Edit" asp-controller="Products" asp-route-id="@Model.Id" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <h5>Sizes & Quantities</h5>
            <table class="table">
                <thead>
                    <tr>
                        <th>Size</th>
                        <th>Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Sizes.Count(); i++)
                    {
                        <tr>
                            <td>
                                @Model.Sizes[i].Size
                                <input asp-for="@Model.Sizes[i].Size" type="hidden" />
                            </td>
                            <td>
                                <input asp-for="@Model.Sizes[i].Quantity" class="form-control" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="form-group">
                <label asp-for="CategoryId" class="form-label fw-bold"></label>
                <select asp-for="CategoryId" class="form-select" asp-items="categoriesItems">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <button type="submit" class="submit-btn">Save Changes</button>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
