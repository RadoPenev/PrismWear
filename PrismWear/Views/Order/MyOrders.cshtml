@model IEnumerable<PrismWear.Data.Models.Order>

@{
    ViewData["Title"] = "My Orders";
}

<div class="container mt-5">
    <h2>My Orders</h2>

    @if (!Model.Any())
    {
        <p class="text-muted">You have no orders yet.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Created On</th>
                    <th>Status</th>
                    <th>Total</th>
                    <th>Details</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.CreatedOn.ToShortDateString()</td>
                        <td>@order.OrderStatus</td>
                        <td>@order.TotalAmount.ToString("C")</td>
                        <td>
                            <a asp-action="Details" asp-route-orderId="@order.Id" class="btn btn-sm btn-primary">
                                View
                            </a>
                        </td>
                        <td>
                            <a asp-controller="Order" asp-action="Edit" asp-route-orderId="@order.Id" class="btn btn-sm btn-warning">
                                Edit
                           </a>
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
