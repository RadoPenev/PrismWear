@model IEnumerable<PrismWear.Data.Models.Order>

@{
    ViewData["Title"] = "All Orders";
}

<div class="container mt-5">
    <h2>Всички поръчки</h2>

    @if (!Model.Any())
    {
        <p class="text-muted">Няма направени поръчки.</p>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Купувач</th>
                    <th>Статус</th>
                    <th>Общо</th>
                    <th>Детайли</th>
                    <th>Редактирай</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.FirstName @order.LastName</td>
                        <td>@order.OrderStatus</td>
                        <td>@order.TotalAmount.ToString("C")</td>
                        <td>
                            <a asp-action="AdminDetails" asp-route-orderId="@order.Id" class="btn btn-sm btn-primary">
                                Виж
                            </a>
                        </td>
                        <td>
                            <a asp-controller="Order" asp-action="Edit" asp-route-orderId="@order.Id" class="btn btn-sm btn-warning">
                                Редактирай
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
