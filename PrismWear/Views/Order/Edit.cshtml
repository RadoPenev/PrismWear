@model EditOrderViewModel
@using PrismWear.Web.ViewModels.Orders

@{
    ViewData["Title"] = "Edit Order";
}

<div class="container mt-5">
    <h2>Edit Order</h2>

    <form asp-action="Edit" method="post">

            <input asp-for="OrderId" type="hidden" />

            <div class="mb-3">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ShippingAddressLine1"></label>
                <input asp-for="ShippingAddressLine1" class="form-control" />
                <span asp-validation-for="ShippingAddressLine1" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ShippingCity"></label>
                <input asp-for="ShippingCity" class="form-control" />
                <span asp-validation-for="ShippingCity" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ShippingState"></label>
                <input asp-for="ShippingState" class="form-control" />
                <span asp-validation-for="ShippingState" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ShippingZipCode"></label>
                <input asp-for="ShippingZipCode" class="form-control" />
                <span asp-validation-for="ShippingZipCode" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ShippingCountry"></label>
                <input asp-for="ShippingCountry" class="form-control" />
                <span asp-validation-for="ShippingCountry" class="text-danger"></span>
            </div>
        
       

        @if (User.IsInRole("Admin"))
        {
            <div class="mb-3">
                <label asp-for="OrderStatus"></label>
                <select asp-for="OrderStatus" class="form-control">
                    <option value="Pending">Pending</option>
                    <option value="Shipped">Shipped</option>
                    <option value="Completed">Completed</option>
                </select>
                <span asp-validation-for="OrderStatus" class="text-danger"></span>
            </div>
        }
        else
        {
            <div class="mb-3">
                <label>Order Status</label>
                <input value="@Model.OrderStatus" class="form-control" readonly />
            </div>
        }

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>
